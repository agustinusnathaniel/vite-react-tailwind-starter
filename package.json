{
  "name": "vite-react-tailwind-starter",
  "version": "0.1.0",
  "private": true,
  "author": "agustinusnathaniel",
  "type": "module",
  "engines": {
    "node": ">=22.16.x"
  },
  "packageManager": "pnpm@10.7.1",
  "pnpm": {
    "neverBuiltDependencies": []
  },
  "scripts": {
    "dev": "react-router dev",
    "build": "pnpm typegen && react-router build",
    "generate-pwa-assets": "pwa-assets-generator",
    "serve": "vite preview",
    "biome:check": "biome check",
    "biome:fix": "pnpm biome:check --write",
    "biome:ci": "biome ci",
    "typegen": "react-router typegen",
    "type:check": "react-router typegen && tsc",
    "turbo": "pnpm dlx turbo@2.5.0",
    "test": "vitest run",
    "test:ui": "vitest --ui --coverage",
    "test:coverage": "vitest --coverage run",
    "check:turbo": "pnpm turbo biome:check type:check test",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "release": "cross-env HUSKY=0 commit-and-tag-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky",
    "knip": "knip"
  },
  "dependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@fontsource-variable/plus-jakarta-sans": "^5.2.5",
    "@react-router/node": "^7.6.1",
    "@theme-toggles/react": "^4.1.0",
    "clsx": "^2.1.1",
    "isbot": "^5.1.28",
    "lucide-react": "^0.511.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-helmet-async": "^2.0.5",
    "react-router": "^7.6.1",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/config-conventional": "^19.8.1",
    "@react-router/dev": "^7.6.1",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.8",
    "@types/node": "^22.15.29",
    "@types/react": "19.1.4",
    "@types/react-dom": "^19.1.5",
    "@vite-pwa/assets-generator": "^1.0.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "commit-and-tag-version": "^12.5.1",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "knip": "^5.59.1",
    "lint-staged": "^16.1.0",
    "rollup-plugin-visualizer": "^5.14.0",
    "tailwindcss": "^4.1.8",
    "typescript": "5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-checker": "^0.9.3",
    "vite-plugin-pwa": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4"
  }
}
